{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "11.0.0"
    },
    {
      "type": "datasource",
      "id": "prometheus",
      "name": "Prometheus",
      "version": "1.0.0"
    }
  ],
  "annotations": {
    "list": []
  },
  "description": "AmityVox instance overview dashboard â€” API performance, database connections, WebSocket stats, and system resources.",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 1,
      "title": "API Overview",
      "type": "row"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "red", "value": 500 }
            ]
          },
          "unit": "reqps"
        }
      },
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 1 },
      "id": 2,
      "title": "HTTP Request Rate",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(rate(amityvox_http_requests_total[5m]))",
          "legendFormat": "req/s"
        }
      ]
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.1 },
              { "color": "red", "value": 0.5 }
            ]
          },
          "unit": "percentunit"
        }
      },
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 1 },
      "id": 3,
      "title": "Error Rate (5xx)",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(rate(amityvox_http_requests_total{status=~\"5..\"}[5m])) / sum(rate(amityvox_http_requests_total[5m]))",
          "legendFormat": "error rate"
        }
      ]
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.2 },
              { "color": "red", "value": 1 }
            ]
          },
          "unit": "s"
        }
      },
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 1 },
      "id": 4,
      "title": "P99 Latency",
      "type": "stat",
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(amityvox_http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p99"
        }
      ]
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "gridPos": { "h": 6, "w": 6, "x": 18, "y": 1 },
      "id": 5,
      "title": "Active WebSocket Connections",
      "type": "stat",
      "targets": [
        {
          "expr": "amityvox_websocket_connections_active",
          "legendFormat": "connections"
        }
      ]
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 7 },
      "id": 6,
      "title": "HTTP Request Rate by Status",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(amityvox_http_requests_total[5m])) by (status)",
          "legendFormat": "{{status}}"
        }
      ]
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 7 },
      "id": 7,
      "title": "HTTP Latency Distribution",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(amityvox_http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(amityvox_http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(amityvox_http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p99"
        }
      ]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 15 },
      "id": 10,
      "title": "Database",
      "type": "row"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 16 },
      "id": 11,
      "title": "PostgreSQL Connection Pool",
      "type": "timeseries",
      "targets": [
        {
          "expr": "amityvox_db_pool_total_connections",
          "legendFormat": "total"
        },
        {
          "expr": "amityvox_db_pool_idle_connections",
          "legendFormat": "idle"
        },
        {
          "expr": "amityvox_db_pool_acquired_connections",
          "legendFormat": "acquired"
        }
      ]
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 16 },
      "id": 12,
      "title": "Database Query Duration",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(amityvox_db_query_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(amityvox_db_query_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p99"
        }
      ]
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 16 },
      "id": 13,
      "title": "Database Errors",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(amityvox_db_errors_total[5m])) by (operation)",
          "legendFormat": "{{operation}}"
        }
      ]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 24 },
      "id": 20,
      "title": "NATS & Events",
      "type": "row"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 25 },
      "id": 21,
      "title": "NATS Message Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(amityvox_nats_messages_published_total[5m])) by (subject)",
          "legendFormat": "{{subject}}"
        }
      ]
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 25 },
      "id": 22,
      "title": "WebSocket Events Dispatched",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(amityvox_websocket_events_dispatched_total[5m])) by (event_type)",
          "legendFormat": "{{event_type}}"
        }
      ]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 33 },
      "id": 30,
      "title": "System Resources",
      "type": "row"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 34 },
      "id": 31,
      "title": "Memory Usage",
      "type": "timeseries",
      "fieldConfig": { "defaults": { "unit": "bytes" } },
      "targets": [
        {
          "expr": "go_memstats_alloc_bytes{job=\"amityvox\"}",
          "legendFormat": "allocated"
        },
        {
          "expr": "go_memstats_sys_bytes{job=\"amityvox\"}",
          "legendFormat": "system"
        },
        {
          "expr": "go_memstats_heap_inuse_bytes{job=\"amityvox\"}",
          "legendFormat": "heap in-use"
        }
      ]
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 34 },
      "id": 32,
      "title": "Goroutines",
      "type": "timeseries",
      "targets": [
        {
          "expr": "go_goroutines{job=\"amityvox\"}",
          "legendFormat": "goroutines"
        }
      ]
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 34 },
      "id": 33,
      "title": "GC Pause Duration",
      "type": "timeseries",
      "fieldConfig": { "defaults": { "unit": "s" } },
      "targets": [
        {
          "expr": "rate(go_gc_duration_seconds_sum{job=\"amityvox\"}[5m])",
          "legendFormat": "gc pause rate"
        }
      ]
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 42 },
      "id": 40,
      "title": "Application Metrics",
      "type": "row"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 43 },
      "id": 41,
      "title": "Messages Created Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(amityvox_messages_created_total[5m]))",
          "legendFormat": "messages/s"
        }
      ]
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 43 },
      "id": 42,
      "title": "File Uploads Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(amityvox_file_uploads_total[5m]))",
          "legendFormat": "uploads/s"
        },
        {
          "expr": "sum(rate(amityvox_file_upload_bytes_total[5m]))",
          "legendFormat": "bytes/s"
        }
      ]
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 43 },
      "id": 43,
      "title": "Rate Limited Requests",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(amityvox_rate_limited_requests_total[5m])) by (endpoint)",
          "legendFormat": "{{endpoint}}"
        }
      ]
    }
  ],
  "schemaVersion": 39,
  "tags": ["amityvox", "overview"],
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {},
  "timezone": "utc",
  "title": "AmityVox - Overview",
  "uid": "amityvox-overview",
  "version": 1
}
